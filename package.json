{
  "name": "readometer",
  "version": "1.0.1",
  "description": "The correct reading progress measurer.",
  "main": "dist/minified/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-minified && npm run build-umd && npm run build-umd-polyfilled",
    "build-minified": "mkdir -p dist/minified && BABEL_ENV=development ./node_modules/.bin/minify ./source -d ./dist/minified && ls -lR ./dist",
    "build-umd": "mkdir -p dist/umd && BABEL_ENV=development ./node_modules/.bin/browserify -s Readometer ./source/index.js -o ./dist/umd/index.js && ./node_modules/.bin/minify ./dist/umd/index.js --out-file ./dist/umd/index.js",
    "build-umd-polyfilled": "mkdir -p dist/umd-polyfilled && mkdir -p ./source-compiled && BABEL_ENV=production ./node_modules/.bin/babel ./source -d ./source-compiled && ./node_modules/.bin/browserify -s Readometer ./source-compiled/index.js -o ./dist/umd-polyfilled/index.js && ./node_modules/.bin/minify ./dist/umd-polyfilled/index.js --out-file ./dist/umd-polyfilled/index.js && rm -rf ./source-compiled",
    "release": "bash dev/push.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muratgozel/readometer.git"
  },
  "keywords": [
    "reading-time",
    "read-time",
    "reading-progress"
  ],
  "author": "Murat GÃ¶zel <murat@gozel.com.tr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muratgozel/readometer/issues"
  },
  "homepage": "https://github.com/muratgozel/readometer#readme",
  "dependencies": {
    "@basekits/core": "^1.0.0",
    "@basekits/kit-dom": "^1.0.1",
    "@basekits/kit-error": "^1.0.3",
    "@basekits/kit-function": "^1.1.0",
    "@basekits/kit-object": "^1.0.1",
    "@basekits/kit-type": "^1.0.0",
    "@basekits/kit-validator": "^1.0.0",
    "event-emitter-object": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-minify": "^0.5.1",
    "babel-preset-minify": "^0.5.1",
    "browserify": "^16.5.0",
    "core-js": "^3.6.4"
  }
}